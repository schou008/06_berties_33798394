<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bargain Books</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>
<body>
    <header>
        <h1>Bargain Books (Under £20)</h1>
    </header>
    <main>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price (£)</th>
                </tr>
            </thead>
            <tbody>
                <% bargainBooks.forEach(function(book) { %>
                    <tr>
                        <td><%= book.name %></td>
                        <td class="price">£<%= book.price ? Number(book.price).toFixed(2) : "0.00" %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
</body>
</html>